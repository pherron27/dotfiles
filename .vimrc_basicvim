set nocompatible              " required
set shell=/bin/bash

filetype off                  " required
filetype plugin indent on

set wrap
set linebreak
set nolist
set textwidth=0
set wrapmargin=0
nnoremap <S-h> ^
vnoremap <S-h> ^
nnoremap <S-l> $
vnoremap <S-l> $

" basic usability
"set modelines=0
"set hidden
"set scrolloff=3
set autoindent
set wrapscan
set ttyfast
"set wildmode=list:full
"set wildignore+=*.pyc,*.o,*.obj.,*.d,.git,*.gcno,*.gcda,venv,*.class,*.jar
set number
set ruler
set expandtab
"set list
"let &listchars="tab:▸ ,trail:·,extends:…,precedes:…"
"set nowrap
"set textwidth=100
"set formatoptions-=t
"set noerrorbells novisualbell t_vb=
"set foldlevelstart=99
"autocmd GUIEnter * set visualbell t_vb=
"if &t_Co >= 256 || has("gui_running")
"    set cursorline
"else
"    set nocursorline
"endif

set clipboard=unnamedplus
